{
  "manifest_version": 3,
  "name": "VelocityPlay",
  "version": "1.0.0",
  "description": "Universal video speed control (0.25x - 16x) with pitch preservation",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "VelocityPlay - Video Speed Control"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "speed-up": {
      "suggested_key": {
        "default": "Alt+Period"
      },
      "description": "Increase playback speed"
    },
    "speed-down": {
      "suggested_key": {
        "default": "Alt+Comma"
      },
      "description": "Decrease playback speed"
    },
    "reset-speed": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Reset to 1x speed"
    }
  }
}

